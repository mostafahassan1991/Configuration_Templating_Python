hostname {{host_name}}
!
enable password {{enable_password}}
!
username {{username}} password 0 {{password}}
ip domain-name {{domain_name}}
!
ip ssh version 2
!
{% for vlan , vlan_info  in vlans.items() %}
{{vlan}}
 name {{vlan_info['name']}}
{% endfor %}
